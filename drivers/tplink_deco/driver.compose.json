{
  "id": "tplink_deco",
  "name": {
    "en": "TP-Link Deco"
  },
  "class": "networkrouter",
  "capabilities": [
    "measure_down_kilobytes_per_s",
    "measure_up_kilobytes_per_s"
  ],
  "platforms": ["local"],
  "connectivity": ["lan"],
  "pair": [
    {
      "id": "tplink_deco_login",
      "template": "tplink_deco_login",
      "options": {
        "logo": "logo.png",
        "title": {
          "en": "Log in with your credentials"
        },
        "hostLabel": { "en": "Host" },
        "hostlaceholder": { "en": "192.168.68.1" },
        "usernameLabel": { "en": "E-mail address" },
        "usernamePlaceholder": { "en": "john@doe.com" },
        "passwordLabel": { "en": "Password" },
        "passwordPlaceholder": { "en": "Password" }
      }
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": { "next": "add_devices" }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.png",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.png"
  }
}
